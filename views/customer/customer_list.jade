extends ./../layout
block main-content
    h3 #{title}
    a(href='/customer/blank')
        p Create New

    table
        thead
            tr: teste
        tbody
            tr
                th photo
                th name
                th email
                th gender
                th actions

            each customer in customers
                tr
                    td
                        img(src='./pictures/#{customer.avatar}')
                    td #{customer.first_name}
                    td #{customer.email}
                    td #{customer.gender}
                    td
                        a(href='/customer/edit/#{customer.id}')
                            button(style="right-margin:5px") Edit
                        form(id='form', method='POST', action='/customer/delete/#{customer.id}?_method=DELETE' style="display:inline")
                            button(type="submit") remove
